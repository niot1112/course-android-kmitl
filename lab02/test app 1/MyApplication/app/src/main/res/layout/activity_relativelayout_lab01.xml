        android:background="#e699b7"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FE0000"
        android:textSize="25sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
