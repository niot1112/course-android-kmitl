<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    >

    <ImageButton
        android:id="@+id/searchImageButton"
        android:layout_width="181dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/apps"
        app:layout_constraintBottom_toBottomOf="@+id/searchImageButton2"
        app:layout_constraintTop_toTopOf="@+id/searchImageButton2"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/searchImageButton2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/searchImageButton2"
        android:layout_width="181dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/games"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/searchImageButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/searchImageButton3"
        android:layout_width="181dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/movies"
        app:layout_constraintBottom_toBottomOf="@+id/searchImageButton4"
        app:layout_constraintTop_toTopOf="@+id/searchImageButton4"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toLeftOf="@+id/searchImageButton4"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/searchImageButton4"
        android:layout_width="181dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/books"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/searchImageButton3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/searchImageButton2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Racing Games"
        android:textColor="#000000"
        android:textSize="17dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/searchImageButton3"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beat the Records!"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="47dp"
        android:layout_height="22dp"
        android:text="More"
        android:textColor="#F8F8FF"
        android:background="#008000"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/searchImageButton4"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        tools:layout_editor_absoluteX="321dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="354dp"
        android:layout_height="146dp"
        android:background="#F8F8FF"
        android:stateListAnimator="@null"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="112dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/csr"
        app:layout_constraintTop_toTopOf="@+id/button4"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        app:layout_constraintVertical_bias="0.565"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSR Racing"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/button4"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="best game ever"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FREE"
        android:textColor="#008000"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />


</android.support.constraint.ConstraintLayout>